@model Lab4.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}
@Model.Community.Title


<p>
    <a asp-action="Create" asp-route-id="@Model.Community.Id">Upload New</a>



</p>
<p>
    <a asp-action="Index" asp-controller="Communities" asp-route-id="@Model.Community.Id">Back to List</a>
</p>
<p>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Image
            </th>
            <th>
                ID
            </th>
            <th></th>
        </tr>

        @foreach (var item in @Model.Advertisements)
        {
            <tr>
                <td>
                    @item.FileName
                <td>

                <td>
                    <img src=@item.Url.ToString() alt=@item.FileName style="max-width: 400px;">
                </td>

                <td>
                    @item.AdvertisementId
                <td>
            </tr>
    }


        </thead>
        <tbody>
